{
  "name": "votemike/money",
  "description": "A class for dealing with Money (a combination of a value and a currency)",
  "keywords": [
    "Currency",
    "Money"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Michael Gwynne",
      "email": "michael@votemike.co.uk"
    }
  ],
  "require": {
    "php": "^7",
    "symfony/intl": "^2.0 || ^3.0 || ^4.0.1"
  },
  "require-dev": {
    "phpbench/phpbench": "^0.13.0",
    "phpstan/phpstan": "^0.9.0",
    "phpunit/phpunit": "^5.3",
    "ext-bcmath": "*"
  },
  "suggest": {
    "ext-bcmath": "Allows you to do math with big numbers"
  },
  "autoload": {
    "psr-4": {
      "Votemike\\Money\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Votemike\\Money\\Benchmarks\\": "benchmarks",
      "Votemike\\Money\\Tests\\": "tests"
    }
  },
  "prefer-stable": true,
  "config": {
    "sort-packages": true
  }
}
